<!DOCTYPE html>
<html>
  <head>
    <title>Kidflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/142f4c50a7.js" crossorigin="anonymous"></script>
    <script>
      window.logoUrl = "<%= image_url("kidflix_logo.png") %>";
      window.wallpaperUrl = "<%= image_url("wallpaper.jpeg") %>"
    </script>
     <% if current_user %>
        <script>
          window.currentUser = {
            "id": <%= current_user.id %>,
            "email": "<%= current_user.email %>"
          }
        </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
